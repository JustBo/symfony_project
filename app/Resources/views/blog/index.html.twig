
{% extends 'base.html.twig' %}
{% block title %} Blog {% endblock %}
{% block content %}

  <h1>Blog</h1>
  {% for blog in blogs %}

    <a href="{{ path('article',{'id':blog.id}) }}" class="blog-item">
      <img src="{{asset('img/icons/' ~ blog.icon.fullname)}}">
      <span class="id">
        {{blog.id}}
      </span>
      <span class="title">
        {{blog.title}}
      </span>
    </a>
  {% endfor %}
{% endblock %}

{% block stylesheets %}
